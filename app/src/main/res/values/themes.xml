<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Refugees" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/blue_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:listDivider">@color/off_white</item>
        <item name="android:textColorSecondary">@color/off_white</item>
        <item name="android:layout_marginTop">03dp</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>