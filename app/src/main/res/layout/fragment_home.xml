<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ACEf"
    tools:context=".MainScreenFragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbars="none"
            android:soundEffectsEnabled="true">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.motion.widget.MotionLayout
                    android:id="@+id/reunion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutDescription="@xml/reunion">

                    <LinearLayout
                        android:id="@+id/background_ren"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <View
                            android:id="@+id/background_ren_curv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/purple_dark"
                            android:layout_weight="0.8"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title_ren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/reunion_your_n_family"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.55"/>
                    <ImageView
                        android:id="@+id/family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/family"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/title_ren"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                        android:id="@+id/dis_ren"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:alpha="0"
                        android:weightSum="1">
                        <TextView
                            android:layout_weight="0.46"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:text="@string/check"
                            android:lineSpacingExtra="1dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.motion.widget.MotionLayout>
                <androidx.constraintlayout.motion.widget.MotionLayout
                    android:id="@+id/instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutDescription="@xml/instructions">
                    <LinearLayout
                        android:id="@+id/background_ins"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layoutDirection="rtl">
                        <View
                            android:id="@+id/background_ins_curv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/blue_dark_inv"
                            android:layout_weight="0.8"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title_ins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="PAPER WORK\n INSTRUCTIONS"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintHorizontal_bias="0.55"/>
                    <ImageView
                        android:id="@+id/scroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/scroll"
                        app:layout_constraintLeft_toLeftOf="@id/title_ins"
                        app:layout_constraintRight_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                        android:id="@+id/dis_ins"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:alpha="0"
                        android:layoutDirection="rtl"
                        android:weightSum="1">
                        <TextView
                            android:layout_weight="0.46"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:text="@string/instructions"
                            android:lineSpacingExtra="1dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.motion.widget.MotionLayout>
                <androidx.constraintlayout.motion.widget.MotionLayout
                    android:id="@+id/uns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutDescription="@xml/uns">
                    <LinearLayout
                        android:id="@+id/background_uns"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <View
                            android:id="@+id/background_uns_curv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/blue_dark"
                            android:layout_weight="0.8"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title_uns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="UNHCR"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:layout_constraintHorizontal_bias="0.55"/>
                    <ImageView
                        android:id="@+id/un_logo"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/unhcr"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/title_uns"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <LinearLayout
                        android:id="@+id/dis_uns"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:alpha="0"
                        android:weightSum="1">
                        <TextView
                            android:layout_weight="0.46"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:text="@string/UN"
                            android:lineSpacingExtra="1dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.motion.widget.MotionLayout>
                <androidx.constraintlayout.motion.widget.MotionLayout
                    android:layout_marginTop="0.5dp"
                    android:id="@+id/options1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutDescription="@xml/first_row">
                    <LinearLayout
                        android:id="@+id/Right"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        app:layout_constraintRight_toRightOf="parent">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.495"
                            android:background="@drawable/blue_dark_dark_inv"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Right_upper"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        app:layout_constraintRight_toRightOf="parent">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.45"
                            android:background="@drawable/blue_dark_inv"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/schools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schools"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="18sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.90"
                        app:layout_constraintVertical_bias="0.3"
                        />
                    <ImageView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/schools"
                        app:layout_constraintRight_toRightOf="@id/schools"
                        app:layout_constraintLeft_toLeftOf="@id/schools"
                        app:layout_constraintTop_toBottomOf="@id/schools"
                        />
                    <LinearLayout
                        android:id="@+id/dis_school"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:weightSum="1"
                        android:alpha="0">
                        <TextView
                            android:layout_marginRight="15dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/school_dis"
                            android:layout_weight="0.45"
                            android:textSize="16sp"
                            android:text="@string/school"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Left"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.495"
                            android:background="@drawable/blue_dark_dark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Left_upper"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:weightSum="1.0"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.45"
                            android:background="@drawable/blue_dark"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/hospitals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hospitals"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.140"
                        app:layout_constraintVertical_bias="0.3"
                        />
                    <ImageView
                        android:id="@+id/hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hospital"
                        app:layout_constraintRight_toRightOf="@id/hospitals"
                        app:layout_constraintLeft_toLeftOf="@id/hospitals"
                        app:layout_constraintTop_toBottomOf="@id/hospitals"
                        />
                    <LinearLayout
                        android:id="@+id/dis_hospital"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        android:layoutDirection="ltr"
                        android:weightSum="1"
                        android:alpha="0">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/hospital_dis"
                            android:layout_weight="0.45"
                            android:textSize="16sp"
                            android:text="@string/hospital"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                </androidx.constraintlayout.motion.widget.MotionLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>