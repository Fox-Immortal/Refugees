<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/Right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/Right_upper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/Left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="1.0"/>
        </Constraint>
        <Constraint
            android:id="@+id/Left_upper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="1"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/schools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.19"/>
        <Constraint
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/schools"
            app:layout_constraintRight_toRightOf="@id/schools"
            app:layout_constraintLeft_toLeftOf="@id/schools" />
        <Constraint
            android:id="@+id/Right"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="0.495"/>
        </Constraint>
        <Constraint
            android:id="@+id/Right_upper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintRight_toRightOf="parent" >
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="0.47"/>
        </Constraint>
        <Constraint
            android:id="@+id/dis_school"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="1" />
        <Constraint
            android:id="@+id/Left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            android:translationZ="-1dp"
            android:alpha="0">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="1"/>
        </Constraint>
        <Constraint
            android:id="@+id/Left_upper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            android:translationZ="-1dp"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/hospitals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            android:translationZ="-1dp"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hospitals"
            app:layout_constraintRight_toRightOf="@id/hospitals"
            app:layout_constraintLeft_toLeftOf="@id/hospitals"
            android:translationZ="-1dp"
            android:alpha="0"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/Right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/Right_upper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            android:alpha="0"/>
        <Constraint android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/schools"
            app:layout_constraintRight_toRightOf="@id/schools"
            app:layout_constraintLeft_toLeftOf="@id/schools"
            app:layout_constraintTop_toBottomOf="@id/schools"
            android:alpha="0"/>
        <Constraint android:id="@+id/schools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/Left"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="0.495"/>
        </Constraint>
        <Constraint
            android:id="@+id/Left_upper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                app:attributeName="weightSum"
                app:customFloatValue="0.47"/>
        </Constraint>
        <Constraint android:id="@+id/hospitals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintVertical_bias="0.3"
            />
        <Constraint android:id="@+id/dis_hospital"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:alpha="1"/>
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@id/end"
        app:duration="1000">
        <OnSwipe
            app:touchAnchorId="@id/school"
            app:dragDirection="dragLeft"
            app:touchAnchorSide="left"/>
    </Transition>
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@id/end2"
        app:duration="1000">
        <OnSwipe
            app:touchAnchorId="@id/hospital"
            app:dragDirection="dragRight"
            app:touchAnchorSide="right"/>
    </Transition>
</MotionScene>
